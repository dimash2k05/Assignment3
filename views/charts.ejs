<script>
    // Define the chart options and data
    const options = {
        chart: {
            type: 'bar'
        },
        series: [{
            name: 'Sales',
            data: [30, 40, 35, 50, 49, 60, 70, 91, 125]
        }],
        xaxis: {
            categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep']
        }
    };

    // Initialize the chart








    const country = new ApexCharts(document.querySelector("#country"), options);
    const history = new ApexCharts(document.querySelector("#history"), options);

    // Render the chart
    country.render();
    history.render()
</script>
